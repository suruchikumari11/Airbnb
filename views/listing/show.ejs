<% layout('/layouts/boilerplate') %>
<body>
    <div class="row mt-3">
    <div class="card col-8 offset-2 show-card"></div>
    <h3>Listing detail</h3>
    </div>
    <div class="card col-6 offset-3">
    
        <img src="<%= Listing.image %>" class="card-img-top show-img" alt="listing_image">
         <div class="card-body">
        <p class="card-text">
         <b> <%= Listing.title %></b></br>
           <%= Listing.description %><br>
          &#8377;<%= Listing.price.toLocaleString("en-IN") %><br>
         <%= Listing.location %><br>
         <%= Listing.country %><br>
            </p>
        </div>
    
    <div class="btns mb-3">
    <a href="/listings/<%= Listing._id %>/edit" class="btn btn-danger col-2 offset-2 mt-3">Edit</a>
    <form method="POST" action="/listings/<%= Listing._id %>?_method=DELETE">
        <button class="btn btn-dark   mt-3 offset-5">Delete</button>
    </form>
  </div>
<hr>
<h4>Leaves a Reviews</h4>
<form>
    <div class="mt-3 mb-3">
    <label for="rating" class="form-label">Rating</label>
    <input type="range"min="1"max="5" id="rating" class="form-range" name='review[rating]'>
    </div>
    <div>
        <label for="comment" class="form-labe">Comment</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
    </div>
    <button class="btn btn-outline-dark mt-3">submit</button>
</form>
</div>
</div>
</body>

