<% layout('/layouts/boilerplate') %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <br><br>
      <h2>Create a New Listing</h2>
    <form method="POST" action="/listings"novalidate class="needs-validation">
      
      <div class="mb-1">
      <label for="title"class='form-label'><b>Title</b></label>
      <input type="text" name="Listing[title]"placeholder="enter a catchytitle" class="form-control"required><br><br>
      <div class="valid-feedback">
       Title Looks good!
      </div>
    </div>
     <!-- Listing is a object and title is keyvalue -->
     <div class="mb-1">
      <label for="description"class='form-label'>Description</label>
     <textarea type="text" name="Listing[description]"placeholder="enter a descripation"class="form-control"required></textarea><br><br>
     <div class="invalid-feedback">
      please enter a short description
     </div>
    </div>
    <div class="mb-1">
      <label for="image"class='form-label'>Image</label>
     <input type="text" name="Listing[image]"placeholder="enter a url/link"class="form-control"required><br><br><br>
    </div>
    <div class="row">
     <div class="mb-1 col-md-4">
      <label for="price"class='form-label'>Price</label>
     <input  name="Listing[price]"placeholder="1200"class="form-control"required><br><br>
     <div class="invalid-feedback">
      price should be valid
     </div>
    </div>
     <div class="mb-1 col-md-8">
      <label for="country"class='form-label'>Country</label>
     <input type="text" name="Listing[country]"placeholder="india"class="form-control"required><br><br>
     <div class="invalid-feedback">
      country should be valid
     </div>
    </div>
     <div class="mb-1">
      <label for="location"class='form-label'>Location</label>
     <input type="text" name="Listing[location]"placeholder="jaipur rajasthan"class="form-control"required><br><br>
      <div class="invalid-feedback">
      location should be valid
     </div>
    </div>
  </div>
     
     <button class="btn btn-danger" class="mb-2 add-btn">Add</button>
     <br><br>
    </form>
  </div>
  </div>

</body>
